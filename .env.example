# Django Settings
# SECURITY WARNING: Generate a new SECRET_KEY for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug mode (use False in production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings (if using PostgreSQL or other database)
# DATABASE_URL=postgresql://user:password@localhost:5432/enem_db

# CORS settings for production (comma-separated list)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email settings (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password
